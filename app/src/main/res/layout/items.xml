<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="182dp">

    <ImageView
        android:id="@+id/ivHinh"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txtTenbb"
        android:layout_width="210dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/tittle_color"
        android:hint="1 loại cây quý là thần dược hạ đường huyết: Ăn tươi hay nghiền bột đều vô cùng bổ dưỡng"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txtNguonbb"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:hint="vietnam.net"
        android:layout_gravity="bottom"/>
    <TextView
        android:id="@+id/txtThoigiandang"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginLeft="113dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:hint="8 phút trước"
        android:layout_gravity="bottom"/>
</androidx.cardview.widget.CardView>